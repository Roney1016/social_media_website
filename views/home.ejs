<link rel="stylesheet" href="/css/home.css">
<div id="sign_up">
    <button>
        <a href="/user/sign_up">
            sign up
        </a>
    </button>
</div>

<div id="sign_in">
    <button>
        <a href="/user/sign_in">
            sign in
        </a>
    </button>
</div>

<div>
    <% if(locals.user){ %>
        <h1> <%= user.name %></h1>
       <% } %>
        
</div>

<div id="home-container">
    <section id="feed-post">
        <h4>Posts</h4>
        <% if(locals.user){ %>
            <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" id="" cols="30" rows="10" placeholder="Type here...." required></textarea>
                <input type="submit" value="post">
            </form>
    
            <% } %>
    
    
                <div id="post-list-container">
                    <h4>all post are display below :-</h4>
                    <ul>
                        <% for(post of posts){ %>
    
                            <%- include('_post') %>
                                <% } %>
    
                    </ul>
                </div>
    
    </section>
    
    <section id="user-friends" >
        <h4>Friends</h4>
        <% for( u of all_users){ %>
            <p>
                <a href="/user/profile/<%= u.id %>">
                    <%= u.name %>
                </a>
            </p>
            <% } %>
    </section>

</div>
<script src="/js/home_post_comments.js"></script>
<script src="/js/home_posts.js"></script>
